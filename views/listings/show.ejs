<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>Listing details :</h3>
            </div>
            <div class="card col-6 offset-3 show-card">
                <div class="card" style="width: 18rem;">
                    <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing image">
                    <div class="card-body">
                        <b>
                            <p class="card-text">
                                <%= listing.tittle %>
                            </p>
                        </b><br>
                        <%= listing.description %> <br>
                            &#8377; <%= listing.price ? listing.price.toLocaleString('en-IN') : "N/A" %>
                                <br>
                                <%= listing.location %> <br>
                                    <%= listing.country %>
                    </div>
                </div>
            </div>
            <br>
        </div>
        <div class="btns"><a href="/listings/<%= listing._id %>/edit "
                class="btn btn-dark col-1 offset-3 edit-btn mb-4">Edit</a>
            <form action="/listings/<%= listing._id%>?_method=DELETE" method="POST">
                <button class="btn btn-dark offset-5 mb-4">Delete</button>
            </form>
        </div>
    </body>